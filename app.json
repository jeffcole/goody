{
  "addons": ["heroku-postgresql"],
  "buildpacks": [
    {
      "url": "https://github.com/HashNuke/heroku-buildpack-elixir.git"
    },
    {
      "url": "https://github.com/gjaldon/heroku-buildpack-phoenix-static.git"
    }
  ],
  "env": {
    "POOL_SIZE": {
      "value": 18
    },
    "SECRET_KEY_BASE": {
      "generator": "secret"
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "name": "goody",
  "scripts": {
    "postdeploy": "POOL_SIZE=2 mix run priv/repo/seeds.exs"
  },
  "stack": "heroku-18"
}
